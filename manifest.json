{
    "manifest_version": 2,
    "name": "Markdown URL Collector",
    "version": "1.0",
    "description": "Collect URLs and convert page content to markdown",
    "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "<all_urls>",
      "clipboardWrite"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icon48.png"
      }
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["turndown.js", "content.js"]
      }
    ],
    "commands": {
      "toggle-listening": {
        "suggested_key": {
          "default": "Alt+L"
        },
        "description": "Toggle URL listening"
      },
      "open-html-page": {
        "suggested_key": {
          "default": "Alt+M"
        },
        "description": "Open HTML page with collected markdown"
      }
    }
  }