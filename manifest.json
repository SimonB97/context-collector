{
  "manifest_version": 2,
  "name": "URL to Markdown Collector",
  "version": "1.1",
  "description": "Collects URLs and converts page content to Markdown.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "clipboardWrite"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "your-extension-id@domain.com",
      "strict_min_version": "68.0"
    }
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png"
  },
  "commands": {
    "toggle-listening": {
      "suggested_key": {
        "default": "Ctrl+Alt+L"
      },
      "description": "Toggle listening for URLs"
    },
    "save-url": {
      "suggested_key": {
        "default": "Ctrl+Alt+S"
      },
      "description": "Save current URL and convert to Markdown"
    },
    "open-markdown-page": {
      "suggested_key": {
        "default": "Ctrl+Alt+M"
      },
      "description": "Open Markdown collection page"
    },
    "copy-markdown": {
      "suggested_key": {
        "default": "Ctrl+Alt+C"
      },
      "description": "Copy concatenated Markdown to clipboard"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    "fonts/Atkinson-Hyperlegible-Regular-102.ttf",
    "fonts/Atkinson-Hyperlegible-Bold-102.ttf"
  ]
}